%p#notice= notice
%h1 Listing Tasklists
%table
  %thead
    %tr
      %th Title
      %th Description
      %th{:colspan => "3"}
  %tbody
    - @tasklists.each do |tasklist|
      %tr
        %td= tasklist.title
        %td= tasklist.description
        %td= link_to 'Show', user_tasklist
        %td= link_to 'Edit', edit_user_tasklist_path(tasklist)
        %td= link_to 'Destroy', tasklist, method: :delete, data: { confirm: 'Are you sure?' }
%br
  = link_to 'New Tasklist', new_user_tasklist_path