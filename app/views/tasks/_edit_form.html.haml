.reveal-modal{"data-reveal" => "", "id" => "modal#{id}"}  
  %h1 Edit Task
  = simple_form_for(edit_user_task_path(current_user, task), remote: true) do |f|
    - if @task.errors.any?
      #error_explanation
        %h2
          = pluralize(@task.errors.count, "error")
          prohibited this task from being saved:
        %ul
          - @task.errors.full_messages.each do |message|
            %li= message
    = f.input :task, input_html: {style: 'width: 76%'}
    = f.input :all_tags, input_html: {style: 'width: 76%'}
    = f.input :deadline, input_html: {style: 'width: 25%'}, start: nil, include_blank: true
    %br
    %br
    = f.button :submit, value: "Update"