%p#notice= notice
%h1 Tasks
%ul.button-group.round
  %li= link_to 'New Task', new_user_task_path, class: "button tiny"
  %li#quick_add
    .button.tiny
      %i.fa.fa-arrow-down
=render "tasks/popup_form"
.alert-box.warning.rounded_top#pending_toggle{style: "margin-bottom: 0"}
  Pending Tasks
%table#pending_tbl.yolo{style: "border-style: solid; border-color: orange; margin-bottom: 0"}
  %thead
    %tr
      %td{width: "5%"} Done
      %td{width: "25%"} Task
      %td{width: "40%"} Deadline
      %td{width: "40%"} Tags
      %td{width: "35%"} Delete
  %tbody#pending      
    %tr#pending_nil{hidden: (@tasks_incomplete.empty?) ? nil : "" }
      %td{colspan: 5} NIL 
    - @tasks_incomplete.each do |task|
      = render 'task', task: task 
.alert-box.warning.rounded_bottom{style: "margin-top: 0"}
  %span#pending_count= @tasks_incomplete.count
  %span pending 
  %span#pending_pluralized tasks
%br
.alert-box.success.rounded_top#completed_toggle{style: "margin-bottom: 0"}
  Completed Tasks
%table#completed_tbl.yolo{style: "border-style: solid; border-color: green; margin-bottom: 0"}
  %thead
    %tr
      %td{width: "5%"} Done
      %td{width: "25%"} Task
      %td{width: "40%"} Deadline
      %td{width: "40%"} Tags
      %td{width: "35%"} Delete
  %tbody#completed
    %tr#completed_nil{hidden: (@tasks_complete.empty?) ? nil : "" }
      %td{:colspan => "5"} NIL     
    - @tasks_complete.each do |task|
      = render 'tasks/task', task: task
.alert-box.success.rounded_bottom{style: "margin-top: 0"}
  %span#completed_count= @tasks_complete.count
  %span completed 
  %span#completed_pluralized tasks
%br
   
  