%p#notice= notice
%h1 Tasks
%ul.button-group.round
  %li= link_to 'New Task', new_user_task_path, class: "button tiny"
  %li#quick_add
    .button.tiny
      %i.fa.fa-arrow-down
=render "popup_form"
.alert-box.warning#pending_toggle{style: "margin-bottom: 0"}
  Pending Tasks
%table#pending.radius.yolo{style: "border-style: solid; border-color: orange"}
  %thead
    %tr
      %td{width: "5%"} Done
      %td{width: "25%"} Task
      %td{width: "40%"} Deadline
      %td{width: "40%"} Tags
      %td{width: "35%"} Delete
  - if @tasks_incomplete.empty?
    %tbody 
      %tr
        %th{colspan: 5} No unfinished tasks!
  - else
    %tbody
      - @tasks_incomplete.each do |task|
        = render 'task', task: task
%br
.alert-box.success#completed_toggle{style: "margin-bottom: 0"}
  Completed Tasks
%table#completed.radius.yolo{style: "border-style: solid; border-color: green"}
  %thead
    %tr
      %td{width: "5%"} Done
      %td{width: "25%"} Task
      %td{width: "40%"} Deadline
      %td{width: "40%"} Tags
      %td{width: "35%"} Delete
  %tbody
    - @tasks_complete.each do |task|
      = render 'task', task: task
%br
   
  